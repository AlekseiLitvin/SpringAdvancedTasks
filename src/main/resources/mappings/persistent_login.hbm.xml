<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="beans.models.PersistentLogin" table="PERSISTENT_LOGIN">
        <id name="series" column="ID">
            <generator class="identity"/>
        </id>
        <property name="username" column="USERNAME" type="string" unique="true" not-null="true"/>
        <property name="token" column="TOKEN" type="string" unique="true" not-null="true"/>
        <property name="lastUsed" type="java.util.Date"/>
    </class>

</hibernate-mapping>